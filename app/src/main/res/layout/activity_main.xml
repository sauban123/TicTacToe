<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative"
    android:background="@drawable/img"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:id="@+id/text1"
        android:textSize="45dp"
        android:textAppearance="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:textColor="#920000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
    </TextView>

    <TextView
        android:id="@+id/playerone"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_below="@id/text1"
        android:textStyle="italic"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="Player 1 score"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/playertwoscore"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_below="@id/text1"
        android:layout_alignParentRight="true"
        android:textStyle="italic"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Player 2 score"
        android:textColor="@color/black"
        android:textSize="25dp" />
    <TextView
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:text="0"
        android:id="@+id/playerOneScore"
        android:layout_below="@id/playerone"
        android:layout_marginLeft="82dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:text="0"
        android:id="@+id/playertwo"
        android:layout_marginTop="5dp"
        android:layout_marginRight="82dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/playerone"
        android:textColor="@color/black"
        android:textSize="30dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="255dp"
        android:layout_height="85dp"
        android:layout_below="@id/playerOneScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            app:cornerRadius="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="255dp"
        android:layout_height="85dp"
        android:layout_below="@id/linearLayout"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            app:cornerRadius="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="85dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayout1"
        android:id="@+id/linearLayout2"
        >
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cornerRadius="20dp"
            android:layout_margin="5dp"
            android:id="@+id/button7"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cornerRadius="20dp"
            android:layout_margin="5dp"
            android:id="@+id/button8"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cornerRadius="20dp"
            android:layout_margin="5dp"
            android:id="@+id/button9"/>
    </LinearLayout>
    <Button
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:id="@+id/playagain"
        android:text="Play Again"
        android:textColor="#050F46"
        android:backgroundTint="#EBD728"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/status"
        android:layout_marginTop="20dp"
        android:textSize="30dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:text="Restart"
        android:textStyle="italic"
        android:backgroundTint="#D82D2D"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/playagain"
        android:textSize="30dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout2"
        android:layout_marginTop="10dp"
        android:id="@+id/status"
        android:text="status"
        android:textStyle="bold"
        android:textColor="#0D0D0D"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>





